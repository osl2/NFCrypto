<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <!-- <item name="colorAlice">@color/colorAlice</item>
        <item name="colorBob">@color/colorBob</item>
        <item name="colorEve">@color/colorEve</item> -->

    </style>

    <style name="font_msg_default">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="font_explanation_default">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="font_explanation_additional">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextAdditional</item>
    </style>

    <style name="font_title">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="font_button_white">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorButtonWhite</item>
    </style>
</resources>
