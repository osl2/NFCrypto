<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivityPersons">

    <TextView
        android:id="@+id/activity_person_text_info"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/activity_persons_button_eve"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:text="Eve"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/activity_persons_button_alice"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Alice" />

    <Button
        android:id="@+id/activity_persons_button_bob"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"
        android:text="Bob" />

    <TextView
        android:id="@+id/activity_person_text_intro"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/activity_persons_text_alice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="200dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/activity_persons_text_eve"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="340dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/activity_persons_text_bob"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="270dp"
        android:text="TextView" />

</android.support.design.widget.CoordinatorLayout>