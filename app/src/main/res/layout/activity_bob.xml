<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:gravity="center_vertical|fill_vertical"
    android:orientation="vertical"
    android:padding="@dimen/margin_screen">

    <TextView
        android:id="@+id/activity_bob_text_plainmessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="@dimen/height_min_textbox_halfscreen"
        android:text="@string/empty_text_encoded"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_bob_button_decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/ic_lock_idle_lock"
            app:backgroundTint="@color/colorBob" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/activity_bob_button_readKey"
            android:layout_width="@dimen/width_button_default"
            android:layout_height="wrap_content"
            android:text="@string/read_key" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/activity_bob_button_readMessage"
            android:layout_width="@dimen/width_button_default"
            android:layout_height="wrap_content"
            android:text="@string/read_msg" />
    </LinearLayout>


    <TextView
        android:id="@+id/activity_bob_text_messagecrypted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_distance"
        android:layout_weight="1"
        android:minHeight="@dimen/height_min_textbox_halfscreen"
        android:text="@string/empty_text_decoded" />

</LinearLayout>