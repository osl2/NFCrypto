<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.ActivityInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_screen">

        <TextView
            android:id="@+id/activity_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/activity_info_header"
            android:textAppearance="@style/font_msg_default"
            android:textSize="24sp"
            tools:layout_height="60dp" />

        <TextView
            android:id="@+id/activity_info_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_distance"
            android:layout_marginBottom="@dimen/margin_distance"
            android:gravity="center"
            android:text="@string/activity_info_text"
            android:textAppearance="@style/font_msg_default" />
    </LinearLayout>
</RelativeLayout>