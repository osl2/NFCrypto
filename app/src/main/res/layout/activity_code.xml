<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_screen"
    tools:context=".activities.ActivityCode">

    <EditText
            android:id="@+id/activity_code_edittext"
            android:layout_width="281dp"
            android:layout_height="127dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="140dp"
            android:ems="10"
            android:inputType="text"
            android:text="Gib hier deinen Freischaltcode ein." android:layout_alignParentEnd="true"
            android:layout_marginEnd="103dp"/>

    <Button
            android:id="@+id/activity_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/freischalten" android:layout_marginTop="260dp" android:layout_alignParentTop="true"/>
</RelativeLayout>