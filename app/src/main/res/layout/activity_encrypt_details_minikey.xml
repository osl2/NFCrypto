<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_screen"
    tools:context=".activities.ActivityAliceInfo">

    <TextView
        android:id="@+id/activity_encrypt_details_plain_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_distance"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/encrypt_details_minikey"
        android:textAppearance="@style/font_title_alice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_min_textbox_fullscreen"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_encrypt_details_minikey_lastKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_distance"
            android:text="@string/lastKey" />

        <TextView
            android:id="@+id/activity_encrypt_details_minikey_generatedKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/height_min_textbox"
            android:textAppearance="@style/font_msg_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/or"
            android:textAppearance="@style/font_explanation_default" />

        <TextView
            android:id="@+id/activity_encrypt_details_minikey_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_distance"
            android:layout_marginBottom="@dimen/margin_distance"
            android:gravity="center"
            android:text="@string/encrypt_details_minikey_info"
            android:textAppearance="@style/font_explanation_default" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_min_space" />

        <EditText
            android:id="@+id/activity_encrypt_details_minikey_inputKey"
            android:layout_width="@dimen/width_button_default"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/font_msg_default" />


    </LinearLayout>

    <Button
        android:id="@+id/activity_encrypt_details_minikey_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/anwenden" />

</LinearLayout>