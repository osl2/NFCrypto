<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_screen"
    tools:context=".activities.ActivityAliceInfo">

    <TextView
        android:id="@+id/activity_encrypt_details_plain_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_distance"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/encrypt_details_plain"
        android:textAppearance="@style/font_title_alice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_min_textbox_fullscreen"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/activity_encrypt_details_plain_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_distance"
            android:layout_marginBottom="@dimen/margin_distance"
            android:gravity="center"
            android:text="@string/encrypt_details_plain_info"
            android:textAppearance="@style/font_explanation_default"
            tools:layout_height="120dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_encrypt_details_plain_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distance"
        android:layout_weight="0"
        android:text="@string/anwenden" />
</LinearLayout>