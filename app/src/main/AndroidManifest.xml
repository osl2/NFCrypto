<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.kit.nfcrypto">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.ActivityWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityAlice"
            android:label="Alice" />
        <activity android:name=".activities.ActivityBob" />
        <activity android:name=".activities.ActivityCryptotoolsCesar" />
        <activity android:name=".activities.ActivityEncryptDetails" />
        <activity android:name=".activities.ActivityEve" />
        <activity android:name=".activities.ActivityInfo" />
        <activity android:name=".activities.ActivityPersons" />
        <activity android:name=".activities.ActivityBase" />
        <activity android:name=".activities.ActivityCode" />
        <activity android:name=".activities.ActivityNFCRead">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="ext"
                    android:pathPrefix="/peterjohnwelcome.com:nfcapp"
                    android:scheme="vnd.android.nfc" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ActivityNFCWrite">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="ext"
                    android:pathPrefix="/peterjohnwelcome.com:nfcapp"
                    android:scheme="vnd.android.nfc" />
            </intent-filter>
        </activity>

    </application>

</manifest>